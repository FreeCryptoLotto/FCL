<?php 

$response = file_get_contents('https://api.etherscan.io/api?module=stats&action=tokensupply&contractaddress=***ADD CONTRACT ADDRESS HERE***&apikey=YourApiKeyToken');
$escrow = file_get_contents('https://api.etherscan.io/api?module=account&action=tokenbalance&contractaddress=***ADD CONTRACT ADDRESS HERE***&address=***ADD ESCROW ADDRESS HERE***&tag=latest&apikey=YourApiKeyToken');
$response = json_decode($response);

foreach ($response as $key => $value) {
	$maxsupply = "$value";
}
$divider = 1000000000000000000;

$number = doubleval($maxsupply);
$maxsupply = $number / $divider;

$circulatingSupply = $maxsupply - $escrow;

echo $circulatingSupply . " FCL in circulation";






?>
